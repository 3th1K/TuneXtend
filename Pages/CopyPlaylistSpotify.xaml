<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuneXtend.Pages.CopyPlaylistSpotify"
             Title="Copy Playlist Inside Spotify">
    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Frame Grid.Row="0">
                <VerticalStackLayout>
                    <Frame>
                        <Entry Placeholder="From"></Entry>
                    </Frame>
                    <Label Text="TO"
                           HorizontalOptions="Center"/>
                    <Frame>
                        <Entry Placeholder="To"></Entry>
                    </Frame>
                    <Frame Margin="40, 20, 40, 20">
                        <Button></Button>
                    </Frame>
                </VerticalStackLayout>
            </Frame>
            <Frame Grid.Row="1">
            </Frame>
        </Grid>
    </StackLayout>
    
</ContentPage>